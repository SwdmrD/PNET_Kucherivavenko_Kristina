@page "/authors"
@inject AppDbContext DbContext

<h3>Автори</h3>
<a href="/author/create" class="btn btn-success btn-sm ml-2">Стоврити новий запис</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Ім'я</th>
            <th scope="col">Прізвище</th>
            <th scope="col">Дата народження</th>
            <th scope="col">Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in DbContext.Authors)
        {
            <tr>
                <td>@author.Id</td>
                <td>@author.Name</td>
                <td>@author.Surname</td>
                <td>@author.BirthDate.ToShortDateString()</td>
                <td>
                    <a href="/author/edit/@author.Id" class="btn btn-primary btn-sm">Редагувати</a>
                    <a href="/author/delete/@author.Id" class="btn btn-danger btn-sm ml-2">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
