@page "/genres"
@inject AppDbContext DbContext

<h3>Жанри</h3>
<a href="/genre/create" class="btn btn-success btn-sm ml-2">Стоврити новий запис</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Назва</th>
            <th scope="col">Дії</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in DbContext.Genres)
        {
            <tr>
                <td scope="row">@genre.Id</td>
                <td>@genre.Name</td>
                <td>
                   <a href="/genre/edit/@genre.Id" class="btn btn-primary btn-sm">Редагувати</a>
                    <a href="/genre/delete/@genre.Id" class="btn btn-danger btn-sm ml-2">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>

